{
    "name": "itemvirtual/cookies-popup",
    "description": "Cookie consent management for Laravel projects",
    "keywords": [
        "itemvirtual",
        "cookies-popup"
    ],
    "homepage": "https://github.com/itemvirtual/cookies-popup",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sergio",
            "email": "sergio@itemvirtual.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "illuminate/support": "^9.9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Itemvirtual\\CookiesPopup\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Itemvirtual\\CookiesPopup\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Itemvirtual\\CookiesPopup\\CookiesPopupServiceProvider"
            ]
        }
    }
}
